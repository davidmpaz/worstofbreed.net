<style>
    .legend-container {
        font-family: 'Space Mono', monospace;
        margin-bottom: 30px;
        border: 2px solid #111;
        padding: 15px;
        background: #fff;
        box-shadow: 8px 8px 0 rgba(0,0,0,0.1);
    }

    .legend-title {
        display: block;
        font-weight: bold;
        margin-bottom: 15px;
        font-size: 0.8rem;
        opacity: 0.6;
    }

    .legend-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .legend-item {
        border: 2px solid; /* Farbe kommt inline */
