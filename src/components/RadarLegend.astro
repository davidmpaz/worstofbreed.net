    }

    .legend-header {
        color: #fff; /* Text auf Farbe immer wei√ü */
        padding: 8px;
        font-weight: bold;
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        gap: 8px;
        text-shadow: 1px 1px 0 #000;
        border-bottom: 2px solid #111;
    }

    .icon { font-size: 1.2rem; }

    .legend-desc {
        padding: 8px;
        font-size: 0.75rem;
        color: #111;
        font-weight: bold;
    }

    /* Mobile Anpassung */
    @media (max-width: 600px) {
        .legend-grid {
            grid-template-columns: 1fr 1fr;
        }
    }
</style>